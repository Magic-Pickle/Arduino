#include <Adafruit_NeoPixel.h>
#ifdef_AVR_
#endif

int const NUM_PIXELS = 12;
int8_t const PIN = 13;
Adafruit_NeoPixel strip;

void setsup() {
  strip = Adafruit_NeoPixel(NUM_PIXEL, PIN, NEO_GRB+NEO_KHZ800);
  strip.begin();
  strip.show(); // Init all pixels to "off"
  pinMode(2, INOUT_PULLUP);
}
void loop() {
// Colors are definded in 0xRRGGBB format.
int sensorValue = digitalRead(2);
if (sensorValue == 0) {
  strip.setPixelColor(0, 0x400000);
 } else {
  strip.setPixelColor(0, 0x000000);
 }
  strip.show();
}
